pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building Example'
                echo env.BUILD_ID
                echo env.WORKSPACE
                echo env.JOB_NAME
                echo env.JENKINS_HOME
            }
        }
        stage('Test') {
            steps {
                echo 'Testing Example'
                echo env.BUILD_ID
                echo env.WORKSPACE
                echo env.JOB_NAME
                echo env.JENKINS_HOME
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying Example' + echo env.WORKSPACE + ' workspace'
                script {
                    def today = new Date()
                    def yesterday = today - 1
                    def daybeforeyesterday = yesterday.previous()
                    println "Today: " + today.format("MM/dd/yyyy") + "Checking previous date" 
                    println "Yesterday: " + yesterday.format("MM/dd/yyyy")
                    println "The Day before yesterday: " + daybeforeyesterday.format("MM/dd/yyyy")
                } 
            }
        }
    }
}
